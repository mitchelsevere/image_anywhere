{
  "manifest_version": 2,
  "name": "Image Anywhere",
  "description": "This extension will allow direct image downloads or save to Google Drive",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": 
  [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    },
    {
      "matches": [ "http://*/*", "https://*/*"],
      "css": [ "style.css" ]
   }
  ],
  "browser_action": {
    "default_icon": "image.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "background",
    "downloads"
  ]
}